<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar_mine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/mine_btn_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="粉丝"
            android:textSize="@dimen/textSize_15"
            android:textColor="#555555"
            android:background="@drawable/button_background_white_selector"
            android:drawableTop="@mipmap/fensi"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:id="@+id/mine_btn_yuebi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="阅币"
            android:textSize="@dimen/textSize_15"
            android:textColor="#555555"
            android:background="@drawable/button_background_white_selector"
            android:drawableTop="@mipmap/yb"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:id="@+id/mine_btn_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="签到"
            android:textSize="@dimen/textSize_15"
            android:textColor="#555555"
            android:background="@drawable/button_background_white_selector"
            android:drawableTop="@mipmap/qd"
            android:gravity="center"
            android:clickable="true"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mine_rly_notice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background_white_selector"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知公告"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_15"
            android:drawableLeft="@mipmap/mine_1"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_rly_help"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/button_background_white_selector"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手帮助"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_15"
            android:drawableLeft="@mipmap/mine_2"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_rly_business"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background_white_selector"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商务合作"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_15"
            android:drawableLeft="@mipmap/mine_3"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_rly_tixian"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background_white_selector"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请提现"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_15"
            android:drawableLeft="@mipmap/mine_4"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_rly_invite_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background_white_selector"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请码"
            android:textColor="#555555"
            android:textSize="@dimen/textSize_15"
            android:drawableLeft="@mipmap/mine_5"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
</LinearLayout>