<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page">

    <include layout="@layout/layout_toolbar2" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/yuebi_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_margin_left="15dp"
        tl:tl_indicator_margin_right="15dp"
        tl:tl_textsize="@dimen/textSize_15"
        tl:tl_textUnselectColor="#352d2f"
        tl:tl_textSelectColor="#ffffff"
        tl:tl_indicator_color="#3388fd"
        tl:tl_indicator_corner_radius="6dp"
        tl:tl_indicator_style="BLOCK"
        tl:tl_indicator_margin_top="10dp"
        tl:tl_indicator_margin_bottom="10dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/yuebi_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>