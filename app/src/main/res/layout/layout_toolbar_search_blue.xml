<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/background_toolbar_blue">
    <ImageView
        android:id="@+id/toolbar_logo"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:src="@mipmap/logo"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/background_textview_search_white"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:drawableRight="@mipmap/search"
        android:paddingRight="18dp"
        android:clickable="true"
        android:layout_toRightOf="@+id/toolbar_logo"
        android:layout_alignBottom="@+id/toolbar_logo"/>
</RelativeLayout>