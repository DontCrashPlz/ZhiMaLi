<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page">

    <include layout="@layout/layout_toolbar2" />
    
    <TextView
        android:id="@+id/setting_tv_zhanghao"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="帐号设置"
        android:textSize="@dimen/textSize_15"
        android:textColor="#555555"
        android:gravity="center_vertical"
        android:background="@drawable/button_background_white_selector"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_tv_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="密码设置"
        android:textSize="@dimen/textSize_15"
        android:textColor="#555555"
        android:gravity="center_vertical"
        android:background="@drawable/button_background_white_selector"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/setting_tv_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="关于我们"
        android:textSize="@dimen/textSize_15"
        android:textColor="#555555"
        android:gravity="center_vertical"
        android:background="@drawable/button_background_white_selector"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/setting_tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="用户反馈"
        android:textSize="@dimen/textSize_15"
        android:textColor="#555555"
        android:gravity="center_vertical"
        android:background="@drawable/button_background_white_selector"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/setting_tv_clean"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="清理缓存"
        android:textSize="@dimen/textSize_15"
        android:textColor="#555555"
        android:gravity="center_vertical"
        android:background="@drawable/button_background_white_selector"
        android:paddingLeft="15dp"
        android:clickable="true"
        android:layout_marginTop="1dp"/>

    <Button
        android:id="@+id/setting_btn_logout"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/background_button_blue_selector"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_15"/>

</LinearLayout>