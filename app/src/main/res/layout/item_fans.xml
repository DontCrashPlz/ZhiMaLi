<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_fans_civ_head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@mipmap/yonghu"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/item_fans_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="@dimen/textSize_15"
        android:textColor="@color/textcolor_black"
        android:layout_toRightOf="@id/item_fans_civ_head"
        android:layout_alignTop="@id/item_fans_civ_head"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/item_fans_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000-01-01 00:00"
        android:textSize="@dimen/textSize_12"
        android:textColor="#ababab"
        android:layout_toRightOf="@id/item_fans_civ_head"
        android:layout_alignBottom="@id/item_fans_civ_head"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:id="@+id/item_fans_tv_yb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#ababab"
        android:textSize="@dimen/textSize_12"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:drawableLeft="@mipmap/yb2"
        android:drawablePadding="5dp"/>

</RelativeLayout>