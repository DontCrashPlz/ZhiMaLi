<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_page">

    <include layout="@layout/layout_toolbar2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:text="提现方式"
                android:textSize="@dimen/textSize_15"
                android:textColor="#555555"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/tixian_icon1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/weixin"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信提现"
                    android:textColor="#555555"
                    android:textSize="@dimen/textSize_15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tixian_icon1"/>
                <RadioButton
                    android:id="@+id/tixian_radio_weixin"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/background_radiobutton_tixian_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:button="@null"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/tixian_icon2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/zhifubao"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝提现"
                    android:textColor="#555555"
                    android:textSize="@dimen/textSize_15"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tixian_icon2"/>
                <RadioButton
                    android:id="@+id/tixian_radio_zhifubao"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/background_radiobutton_tixian_selector"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:button="@null"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现账号"
                    android:textSize="@dimen/textSize_15"
                    android:textColor="#555555"/>
                <EditText
                    android:id="@+id/tixian_et_zhanghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:textSize="@dimen/textSize_13"
                    android:textColor="#555555"
                    android:hint="到账微信/支付宝帐号"
                    android:textColorHint="@color/textcolot_hint_gary"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textSize="@dimen/textSize_15"
                    android:textColor="#555555"/>
                <EditText
                    android:id="@+id/tixian_et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:textSize="@dimen/textSize_13"
                    android:textColor="#555555"
                    android:hint="请输入手机号码"
                    android:textColorHint="@color/textcolot_hint_gary"
                    android:layout_marginLeft="20dp"
                    android:inputType="number"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:layout_marginTop="1dp"
                android:paddingLeft="69dp"
                android:paddingRight="15dp">
                <EditText
                    android:id="@+id/tixian_et_yanzhengma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_13"
                    android:textColor="#555555"
                    android:hint="请输入验证码"
                    android:textColorHint="@color/textcolot_hint_gary"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tixian_btn_get"
                    android:paddingRight="10dp"
                    android:inputType="number"/>
                <Button
                    android:id="@+id/tixian_btn_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textSize="@dimen/textSize_14"
                    android:textColor="#555555"
                    android:background="@drawable/background_button_gary_hollow_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:text="提现金额（元）"
                android:textSize="@dimen/textSize_15"
                android:textColor="#555555"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tixian_tagflow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:max_select="1"
                android:background="@android:color/white"
                android:layout_marginTop="1dp"
                app:tag_gravity="center"/>

            <Button
                android:id="@+id/tixian_btn_commit"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="45dp"
                android:text="提交申请"
                android:textSize="@dimen/textSize_15"
                android:textColor="@android:color/white"
                android:background="@drawable/background_button_blue_selector"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>